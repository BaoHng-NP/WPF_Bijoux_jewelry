<Window x:Class="Bijoux_Jewelry.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bijoux_Jewelry"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>

        <Label Content="UserName" HorizontalAlignment="Left" Margin="256,224,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="256,255,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUserName" Margin="346,224,258,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
        <PasswordBox x:Name="pass" Margin="346,259,258,0" VerticalAlignment="Top"/>
        <Button Content="Login" x:Name="btnLogin" HorizontalAlignment="Left" Margin="384,323,0,0" VerticalAlignment="Top" Height="32" Width="65" Click="btnLogin_Click" />
        <Image Margin="248,10,248,223" Source="/images/logo.jpg" Stretch="Fill"/>

    </Grid>
</Window>
